{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jest-dom/recommended",
        "airbnb",
        "airbnb-typescript",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "prettier"
    ],
    "rules": {
        "react/require-default-props": "off",
		"prettier/prettier": [
			"error",
			{
				"bracketSpacing": true,
				"printWidth": 80,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": false,
				"endOfLine": "lf"
			}
		]
	}
}
